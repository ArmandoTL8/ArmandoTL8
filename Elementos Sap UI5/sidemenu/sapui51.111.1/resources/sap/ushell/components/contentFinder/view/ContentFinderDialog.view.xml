<mvc:View
    id="contentFinderDialogView"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    height="100%"
    controllerName="sap.ushell.components.contentFinder.controller.ContentFinderDialog">
    <Dialog
        id="contentFinderDialog"
        contentWidth="64.5rem"
        contentHeight="80%"
        resizable="true"
        closeOnNavigation="true"
        class="sapUiNoContentPadding sapUiSizeCompact"
        horizontalScrolling="false"
        verticalScrolling="false"
        afterClose=".afterClose">
        <customHeader>
            <OverflowToolbar>
                <Button icon="sap-icon://nav-back"
                        id="sapContentFinderBackButton"
                        visible="true"
                        press=".navigate(0)"/>
                <Title text="Current Content Finder Page" />
                <ToolbarSpacer />
            </OverflowToolbar>
        </customHeader>

        <content>
            <NavContainer id="contentFinderNavContainer">
                <Page
                    id="contentFinderWidgetGalleryPage"
                    enableScrolling="false"
                    showHeader="false">
                    <mvc:XMLView
                        height="100%"
                        viewName="sap.ushell.components.contentFinder.view.WidgetGallery" />
                </Page>

                <Page
                    id="contentFinderAppSearchPage"
                    enableScrolling="false"
                    showHeader="false">
                    <mvc:XMLView
                        height="100%"
                        viewName="sap.ushell.components.contentFinder.view.AppSearch" />
                </Page>
            </NavContainer>
        </content>
        <beginButton>
            <Button id="sapContentFinderAddButton"
                    type="Emphasized"
                    visible="true"
                    text="Add (0)"
                    press=".addWidget"/>
        </beginButton>
        <endButton>
            <Button id="sapContentFinderCancelButton"
                    text="{i18n>ContentFinder.Button.Cancel}"
                    press=".hide"/>
        </endButton>
    </Dialog>
</mvc:View>
