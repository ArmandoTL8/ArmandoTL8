<mvc:View
	controllerName="sap.ui.table.sample.Selection.Controller"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
	height="100%">
	<m:Page
		showHeader="false"
		enableScrolling="false"
		class="sapUiContentPadding">
		<m:content>
			<m:Label text="Selection Mode" labelFor="select1"/>
			<m:Select id="select1" width="100%" items="{selectionmodel>/selectionitems}" selectedKey="MultiToggle" change="onSelectionModeChange">
				<c:Item key="{selectionmodel>key}" text="{selectionmodel>text}"/>
			</m:Select>

			<m:Label text="Selection Behavior" labelFor="select2"/>
			<m:Select id="select2" width="100%" items="{selectionmodel>/behavioritems}" selectedKey="RowSelector" change="onBehaviourModeChange">
				<c:Item key="{selectionmodel>key}" text="{selectionmodel>text}"/>
			</m:Select>

			<Table id="table1"
				rows="{/ProductCollection}"
				selectionMode="MultiToggle"
				visibleRowCount="7"
				ariaLabelledBy="title">
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="Ordenes de compra"/>
						<m:ToolbarSpacer/>
						<m:Button
							icon="sap-icon://save"
							tooltip="Grabar"/>
					</m:OverflowToolbar>
				</extension>

				<columns>
					<Column width="11rem">
						<m:Label text="Plan Entrega" />
						<template>
							<m:Text text="{Name}" wrapping="false" />
						</template>
					</Column>
					<Column width="6rem" hAlign="End">
						<m:Label text="Item" />
						<template>
							<m:Label text="{Quantity}" />
						</template>
					</Column>
					<Column width="11rem">
						<m:Label text="Material" />
						<template>
							<m:Label text="{ProductId}"/>
						</template>
					</Column>
					<Column width="11rem">
						<m:Label text="DescripciÃ³n" />
						<template>
							<m:Label text="{Description}"/>
						</template>
					</Column>
					<Column width="11rem" hAlign="Center">
						<m:Label text="Fecha Entrega" />
						<template>
							<m:DatePicker value="{
								path: 'DeliveryDate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'timestamp'}}
							}"/>
						</template>
					</Column>
					<Column width="11rem">
						<m:Label text="Cantidad" />
						<template>
							<m:Input value="{TaxTarifCode}"/>
						</template>
					</Column>
					<Column width="11rem">
						<m:Label text="UM" />
						<template>
							<m:Label text="{UoM}"/>
						</template>
					</Column>
						
				</columns>
			</Table>

		</m:content>
	</m:Page>
</mvc:View>
